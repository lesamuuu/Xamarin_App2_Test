<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toDoCheck.App">
    <Application.Resources>
        <ResourceDictionary>
  
          <!-- Main Theme -->
          <Color x:Key="PrimaryColor">#343a40</Color>
          <Color x:Key="PrimaryDarkColor">#212529</Color>
          <Color x:Key="PrimaryLightColor">#6c757d</Color>
  
          <!-- Accent Color -->
          <Color x:Key="colorAccent">#FFC107</Color>
  
          <!-- Text Colors -->
          <Color x:Key="PrimaryTextColor">#212121</Color>
          <Color x:Key="SecondaryTextColor">#757575</Color>
  
          <!-- Backgrounds and Surfaces -->
          <Color x:Key="BackgroundColor">#F5F5F5</Color>
          <Color x:Key="SurfaceColor">#FFFFFF</Color>
  
        </ResourceDictionary>

    </Application.Resources>
</Application>